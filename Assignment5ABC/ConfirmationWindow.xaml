<Window x:Class="Assignment5ABC.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment5ABC"
        mc:Ignorable="d"
        Title="Confirmation Window" Height="200" Width="400">
    <StackPanel>
        <TextBlock Text="Do you want to abort creating a customer?" HorizontalAlignment="Center" FontSize="18" Margin="0 20 0 0" />
        <Grid Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnYes" Content="Yes" Width="60" Height="20" Grid.Column="0" Click="btnYes_Click"/>
            <Button x:Name="btnNo" Content="No" Width="60" Height="20" Grid.Column="1" Click="btnNo_Click"/>
        </Grid>
    </StackPanel>
</Window>
